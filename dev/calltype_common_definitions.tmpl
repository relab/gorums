{{define "callLoop"}}
	replyChan := make(chan {{.UnexportedTypeName}}, c.n)
	var wg sync.WaitGroup
	wg.Add(c.n)
	for _, n := range c.nodes {
{{- if .PerNodeArg}}
		go callGRPC{{.MethodName}}(ctx, &wg, n, f(*a, n.id), replyChan)
{{else}}
		go callGRPC{{.MethodName}}(ctx, &wg, n, a, replyChan)
{{end -}}
	}
	wg.Wait()
{{end}}
